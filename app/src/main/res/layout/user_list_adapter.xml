<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/xs_margin_detail"
    android:paddingBottom="@dimen/xs_margin_detail"
    android:paddingStart="@dimen/margin_detail"
    android:paddingEnd="@dimen/margin_detail"
    android:id="@+id/list_holder">

    <TextView
        android:id="@+id/list_first_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_detail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/list_last_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="@dimen/margin_detail"
        app:layout_constraintStart_toEndOf="@id/list_first_name"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/list_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_detail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/list_first_name" />

</androidx.constraintlayout.widget.ConstraintLayout>